[Unit]
Description=IFC2DuckDB FastAPI web app
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/ifc2duckdb
Environment="PATH=/opt/ifc2duckdb/.venv/bin"
ExecStart=/opt/ifc2duckdb/.venv/bin/uvicorn webapp.main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target


